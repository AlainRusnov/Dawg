
<div class="index-page">

  <div class="filter-search">
    <div>
      <h1 id="search-header" style="font-family:'Coustard', cursive; font-size: 24px;">DAWGS near you:</h1>
    </div>
    <div class="icon-list">
      <ul class="dog-size list-inline">
        <li>
          <div class="icon-size list-inline">
          <%= image_tag "smalldog.svg", height: 28, width: 50 %>
          </div>
        </li>
        <li>
          <div class="icon-size list-inline">
          <%= image_tag "meddog.svg", height: 55, width: 55%>
          </div>
        </li>

        <li>
          <div class="icon-size list-inline">
          <%= image_tag "bigdog.svg", height: 75, width: 75 %>
          </div>
        </li>
      </ul>
    </div>

  </div>
  <div class="dogcontainer">

    <div class="cards">
      <% @dogs.each do |dog| %>

      <div class="card">
        <div class="img-search-dog">
            <% if dog.photos.present? %>
              <%= cl_image_tag dog.photos[0].key, :height=>150, :width=>180, :crop=>"fill" %>
            <% else %>
              <%= image_tag "dog-skateboard-how-to-train-guide.jpg", :height=>150, :width=>180 %>
            <% end %>
       <!--   <%= image_tag "dog-skateboard-how-to-train-guide.jpg", class: "img-dog" %> -->
        </div>
        <div class="dog-info">
          <div class="center-v">
            <h1 id="dog-name"><%= dog.name %></h1>
            <h2 id="dog-breed"><%= dog.breed %></h2>

          </div>
        </div>
        <div id="see-more" class="btn-blue center-v">
          <%= link_to "See More", dog_path(dog) %>
        </div>
      </div>

      <% end %>
    </div>

    <div id="map"
      style="width:550px; height: 600px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  <footer>
    <div class="footer">
    </div>
  </footer>
</div>
</div>
