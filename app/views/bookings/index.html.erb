<div class="main">
  <h1>DAWG Dashboard</h1>
  <h2 style="font-family: 'Fredoka One', cursive;">Welcome, <%= current_user.name %>!</h2>

  <div class="title-container d-flex">
    <div>
      <h4 style="text-align: left; font-family: 'Fredoka One', cursive">Pending Requests</h4>
    </div>
    <div>
 <!--      <h4 style="font-family: 'Fredoka One', cursive;">My DAWGs</h4> -->
    </div>
  </div>

  <div class="container">
      <div class="pending-requests">


        <% @owner_bookings.each do |booking| %>

        <div class="request">
        <div class="dog-image ml-5">
          <h6><%= booking.dog.name %></h6>
        </div>

        <div class="request-body">
          <div><h5 class="ml-3 mt-3" style="font-weight: bold"><%= booking.user.name %></h5></div>
          <div><p class="ml-3">Farmer's market and the park.</p></div>
        </div>
        <div class="d-flex p-5">
          <a href="#" class="btn-blue mr-3">Accept</a>
          <a href="#" class="btn-blue p-2">Decline</a>
        </div>
      </div>
       <% end %>

    </div>
    <div class="my-dogs">
      <% if current_user.dogs == nil %>
      <h1>hello</h1>
        <h1>hello there</h1>

        <div class="dog">
          <%= image_tag "dog1-3.jpg"%>
        </div>
        <% else %>

        <% current_user.dogs.each do |dog| %>
          <div class="dog">
            <%= image_tag "dog1-3.jpg"%>
            <%= link_to dog.name, dog_path(dog), class: "dog-name" %>
            <h2 class="dog-breed"> <%= dog.breed %> </h2>
          </div>
        <% end %>
<% end %>
    </div>
</div>

