<div class="main">
  <h1>Welcome to the DAWG Dashboard</h1>



  <h2>Pending Requests</h2>
  <div class="container">
      <div class="pending-requests">


        <div class="request">
          <div class="dog-image ml-5"></div>
          <div class="request-body">
            <div><h5 class="ml-3 mt-3" style="font-weight: bold">alainshreddds50</h5></div>
            <div><p class="ml-3">Taking Tucker to get SWOL.</p></div>
          </div>

          <div class="d-flex p-5">
            <a href="#" class="btn-blue mr-3">Accept</a>
            <a href="#" class="btn-blue p-2">Decline</a>
          </div>

        </div>
      </div>

  <div class="my-dogs">

      <% @dogs.each do |dog| %>

        <div class="dog">
          <%= image_tag "dog1-3.jpg"%>
          <h4 class="center mt-2 dog-name"> <%= dog.name %> </h4>
          <h5 class="center dog-breed"> <%= dog.breed %> </h5>
        </div>

      <% end %>
  </div>
