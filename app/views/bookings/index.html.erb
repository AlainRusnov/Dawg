<div class="main">
  <h1>DAWG Dashboard</h1>
  <h2 style="font-family: 'Helvetica', cursive;">Welcome, <%= current_user.name %>!</h2>

  <div class="title-container d-flex">
    <div>
      <h4 style="text-align: left">Pending Requests</h4>
    </div>
    <div>
      <h4>My DAWGs</h4>
    </div>
  </div>

  <div class="container">
    <div class="pending-requests">
      <% @owner_bookings.each do |booking| %>
        <div class="request">
        <div class="dog-image ml-5">
          <h6><%= booking.dog.name %></h6>
        </div>
        <div class="request-body">
          <div><h5 class="ml-3 mt-3" style="font-weight: bold"><%= booking.user.name %></h5></div>
          <div><p class="ml-3">Farmer's market and the park.</p></div>
        </div>
        <div class="d-flex p-5">
          <%= link_to "Accept", booking_accept_path(booking), method: :patch, class: "btn-blue mr-3" %>
          <%= link_to "Decline", booking_reject_path(booking), method: :patch, class: "btn-blue mr-3" %>
      <% end %>
    </div>
  </div>
