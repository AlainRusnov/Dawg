<div class="new-booking-container">
  <div class= "container">
   <div class= "dog-details">
      <h2>Book <%= @dog.name %>!</h2>
      <p>Owner: <%= @dog.user.name %></p>
     </div>
    <div class = "booking-container">
      <div class="feature-booking-img">
        <% if @dog.photos.attached? %>
          <%= cl_image_tag @dog.photos[0].key %>
        <% else %>
          <%= image_tag "French-Bulldog.jpg" %>
        <% end %>
      </div>
      <div class="booking-imgs">
        <% if @dog.photos.attached? %>
          <% @dog.photos.first(5).drop(1).each do |photo| %>
            <% if photo.present? %>
              <div class="booking-img"><%= cl_image_tag photo.key, :height=>160, :width=>300, :crop=>"fill" %></div>
            <% else %>
              <div class="booking-img"><%= image_tag "French-Bulldog.jpg" %></div>
            <% end %>
          <% end %>
        <% else %>
          <div class="booking-img"><%= image_tag "French-Bulldog.jpg" %></div>
        <% end %>
      </div>
    </div>
      <%= simple_form_for [@dog, @booking] do |f| %>
        <%= f.input :description, label: false, placeholder: "send #{@dog.name}'s human a message" %>
        <%= f.submit %>
      <% end %>
  </div>
</div>



